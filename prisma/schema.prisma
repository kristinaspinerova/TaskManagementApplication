generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Task {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  due         DateTime
  priority    Int
  status      Int
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  surname  String
  email    String     @unique
  role     Role       @relation(fields: [roleId], references: [id])
  roleId   Int
  TaskList TaskList[]
}

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique
  User User[]
}

model TaskList {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?
  creator      User     @relation(references: [id], fields: [userId])
  creationDate DateTime
  userId       Int
}
